<h1>Challenge Suggestions</h1>
<p>Tell us your challenge idea <%= link_to 'here', new_challenge_path %>.</p>

<ul>
<% @challenges.each do |challenge| %>

  <% @user = User.find(challenge.user_id) %>

  <li>
    <span><%= challenge.description %></span><br>
    <span>Suggested by <%= link_to @user.full_name, @user %></span>
    <% if is_moderator(current_user) %>
  	  [Mod: <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>&nbsp;,
  	  <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td> or
  	  <td><%= link_to 'Approve', challenge, method: :approve %></td> ]
    <% end %>
  </li>
<% end %>
</ul>