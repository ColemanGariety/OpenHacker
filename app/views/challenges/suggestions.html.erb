<header>
  <h1>Challenge Suggestions</h1>
  <p>Tell us your challenge idea <%= link_to 'here', new_challenge_path %>.</p>
</header>


<% if @challenges.empty? %>
  <p>No new ideas right now...</p>
<% else %>
  <ul>
    <% @challenges.each do |challenge| %>
      <li>
        <b><%= challenge.description %></b><%= render "mod", :challenge => challenge %><br>
        <span>Suggested <%= time_ago_in_words(challenge.created_at) %> ago by <%= link_to challenge.user.full_name, challenge.user %></span>
      </li><br>
    <% end %>
  </ul>
<% end %>