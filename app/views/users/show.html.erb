<div id="profile-header">
<img src="http://www.gravatar.com/avatar/<%= @user.gravatar_id %>?s=500&d=http://thelist.io/assets/profile.jpg" id="default">
<h1><%= @user.full_name %></h1>
<%= link_to @user.blog_url, @user.blog_url,  :target => "_blank" %><br>
<%= 'Hireable' if @user.hireable%>
<%= '- Moderator' if @is_moderator %>

<p><%= @user.bio %></p>
<div class="clearfix"></div>
</div>

<h2>Submitted entries</h2>

<% if @entries.count == 0 %>
 <p><%= @user.full_name.split(" ").first %> has not submitted anything yet.</p>
<% else %>
	<ul>
	<% @entries.each do |entry| %>
	  <li>
	    <span><%= link_to entry.title, entry %></span>
	    <span><%= entry.description %></span>
	    â€” <a href="<%= entry.demo_url %>">Demo</a>
	    <% if current_user && current_user.level == 1 %>
	    	[Mod: <span><%= link_to 'Edit', edit_entry_path(entry) %></span> or
	    	<span><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></span>]
	    <% end %>
	  </li>
	<% end %>
	</ul>
<% end %>
