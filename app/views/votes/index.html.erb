<% if current_voting_challenge %>
  <h1>Vote on <%= current_voting_challenge.title %></h1>

  <%= link_to 'Vote on this challenge', new_vote_path %>

  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.title %></td>
      <td><%= entry.description %></td>
      <td><%= entry.repo_url %></td>
      <td><%= entry.thumb_url %></td>
      <td><%= entry.submitting_user_id %></td>
      <td><%= entry.receiving_challenge_id %></td>
      <td><%= link_to 'Show', entry %></td>
      <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
      <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
  <h2>Sorry, no challenges are in voting at the moment&hellip;</h2>
<% end %>